{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
        "src": "api/index.py",
        "use": "@gbozee/now-python-asgi",
        "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index"
    },
    {
      "src": "/(.*)",
      "dest": "/build/$1",
      "headers": {
        "x-request-path": "$1"
      }
    }
  ]
}
